# Production Environment Configuration
NODE_ENV=production
PORT=5000
ENV_NAME=Production

# Database (Production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/nexttechfusion_prod
DB_NAME=nexttechfusion_prod

# JWT Configuration (Production)
JWT_SECRET=prod-ultra-secure-jwt-key-change-this-in-production
JWT_EXPIRE=30d
JWT_REFRESH_SECRET=prod-ultra-secure-refresh-secret-key

# Redis Configuration (Production)
REDIS_URL=redis://prod-redis-server:6379

# Email Configuration (Production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=noreply@nexttechfusiongadgets.com
EMAIL_PASS=prod-app-password

# Payment Configuration (Production - Live Keys)
# Stripe
STRIPE_SECRET_KEY=sk_live_prod_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_prod_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_prod_webhook_secret

# Razorpay
RAZORPAY_KEY_ID=rzp_live_prod_key_id
RAZORPAY_KEY_SECRET=prod_razorpay_secret

# PayPal
PAYPAL_CLIENT_ID=prod_paypal_client_id
PAYPAL_CLIENT_SECRET=prod_paypal_client_secret
PAYPAL_MODE=live

# UPI Configuration
UPI_MERCHANT_ID=prod_merchant_id
UPI_MERCHANT_KEY=prod_merchant_key

# Google Pay
GOOGLE_PAY_MERCHANT_ID=prod_google_pay_merchant_id
GOOGLE_PAY_ENVIRONMENT=PRODUCTION

# AI Configuration
OPENAI_API_KEY=prod-openai-api-key

# Frontend URL
FRONTEND_URL=https://nexttechfusiongadgets.com

# File Upload Configuration (Production)
CLOUDINARY_CLOUD_NAME=prod-cloudinary-name
CLOUDINARY_API_KEY=prod-cloudinary-key
CLOUDINARY_API_SECRET=prod-cloudinary-secret

# Security (Production)
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring (Production)
ENABLE_LOGGING=true
LOG_LEVEL=error
ENABLE_DETAILED_LOGS=false

# Production Features
ENABLE_CORS=false
ENABLE_MOCK_DATA=false
ENABLE_DEBUG_ROUTES=false